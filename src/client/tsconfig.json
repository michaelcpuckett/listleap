{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "outDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "paths": {
      "elements/*": ["./elements/*"],
      "shared/*": ["../shared/*"]
    }
  },
  "exclude": ["../../node_modules"],
  "include": ["index.ts", "elements/**/*"]
}
