{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "noLib": false,
    "isolatedModules": true,
    "lib": ["ESNext", "webworker", "DOM.Iterable"],
    "target": "ESNext",
    "outDir": "../../dist",
    "paths": {
      "components/*": ["./components/*"],
      "endpoints/*": ["./endpoints/*"],
      "middleware/*": ["./middleware/*"],
      "config/*": ["./config/*"]
    }
  },
  "exclude": ["../../node_modules"],
  "include": [
    "index.tsx",
    "install.ts",
    "components/**/*",
    "endpoints/**/*",
    "config/**/*",
    "middleware/**/*"
  ]
}
