{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react-jsx",
    "noLib": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "webworker", "DOM.Iterable"],
    "target": "ESNext",
    "outDir": "../../dist",
    "paths": {
      "components/*": ["../components/*"],
      "middleware/*": ["./middleware/*"],
      "dist/*": ["../../dist/*"],
      "app/*": ["../app/*"]
    }
  },
  "include": ["../../dist/*.json", "./**/*"]
}
